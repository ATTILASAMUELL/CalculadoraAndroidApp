<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cinza"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_conteudo"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="start"
        android:singleLine="true"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_limpar"
            style="@style/Operacao_Button"
            android:layout_weight="3"
            android:text="C" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_divisao"
            style="@style/Operacao_Button"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_numero_sete"
            style="@style/Numeros_Button"
            android:text="7" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_oito"
            style="@style/Numeros_Button"
            android:text="8"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nove"
            style="@style/Numeros_Button"
            android:text="9"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiplicacao"
            style="@style/Operacao_Button"
            android:text="X"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_numero_quatro"
            style="@style/Numeros_Button"
            android:text="4" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_numero_cinco"
            style="@style/Numeros_Button"
            android:text="5"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_numero_seis"
            style="@style/Numeros_Button"
            android:text="6"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_subtracao"
            style="@style/Operacao_Button"
            android:text="-"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_numero_um"
            style="@style/Numeros_Button"
            android:text="1" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dois"
            style="@style/Numeros_Button"
            android:text="2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_tres"
            style="@style/Numeros_Button"
            android:text="3"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_soma"
            style="@style/Operacao_Button"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ponto"
            style="@style/Numeros_Button"
            android:text="." />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_zero"
            style="@style/Numeros_Button"
            android:text="0"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backspace"
            style="@style/Operacao_Button"
            android:src="@drawable/backpa"
            android:scaleType="center"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_igual"
            style="@style/Operacao_Button"
            android:textColor="@color/laranja"
            android:text="="/>



    </LinearLayout>

</LinearLayout>